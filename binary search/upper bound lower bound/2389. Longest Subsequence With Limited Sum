http://leetcode.com/problems/longest-subsequence-with-limited-sum/solutions/7143725/binary-search-upper-and-lower-bound-by-s-qy5c/

class Solution {
public:
    vector<int> answerQueries(vector<int>& nums, vector<int>& queries) 
    {
        sort(nums.begin(),nums.end());
        int i;   
        int n=nums.size();
        vector<int> acc(n);
        acc[0]=nums[0];
        for(i=1;i<n;i++)
        {
            acc[i]=nums[i]+acc[i-1];
        }
        int m=queries.size();
        vector<int> ans(m);
        for(i=0;i<m;i++)
        {
            int l=0;
            int r=n;
            int mid;
            while(l<r)
            {
                 mid=(l+r)/2;
                if(queries[i]>=acc[mid])
                {
                    l=mid+1;
                }
                else
                {
                    r=mid;
                }
            }
            
            ans[i]=l;
        }
        return ans;
        
    }
};
