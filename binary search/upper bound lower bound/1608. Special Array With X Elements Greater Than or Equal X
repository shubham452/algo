1608. Special Array With X Elements Greater Than or Equal X

https://leetcode.com/problems/special-array-with-x-elements-greater-than-or-equal-x/solutions/7382886/binary-search-lower-bound-by-shubham_sk7-bun0/

class Solution {
public:
    int lower(vector<int> &nums, int target)
    {
        int l=0;
        int r=nums.size()-1;
        int ans;
        while(l<=r)
        {
            int mid=l+(r-l)/2;
            if(nums[mid]>=target)
            {
                ans=mid;
                r=mid-1;
            }
            else
            {
                l=mid+1;
            }
        }
        return ans;
    }
    int specialArray(vector<int>& nums) 
    {
        sort(nums.begin(),nums.end());
        for(int i=1;i<=nums.size();i++)
        {
            int x= lower(nums,i);
            int left=nums.size()-x;
            if(left-i==0)
            {
                return i;
            }
        }    
        return -1;
    }
};
